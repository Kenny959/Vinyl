<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vanmeenen.vinyl"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="23" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.vanmeenen.vinyl.SplashScreenActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.vanmeenen.vinyl.VinylListActivity"
            android:label="@string/title_vinyl_detail"
            android:parentActivityName="com.vanmeenen.vinyl.VinylListActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vanmeenen.vinyl.VinylListActivity" />
        </activity>
        <activity
            android:name="com.vanmeenen.vinyl.VinylDetailActivity"
            android:label="@string/title_vinyl_detail"
            android:parentActivityName="com.vanmeenen.vinyl.VinylListActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vanmeenen.vinyl.VinylListActivity" />
        </activity>
        <activity
            android:name="com.vanmeenen.vinyl.NewItemActivity"
            android:label="@string/title_activity_display_message"
            android:parentActivityName="com.vanmeenen.vinyl.VinylListActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vanmeenen.vinyl.VinylListActivity" />
        </activity>
    </application>

</manifest>